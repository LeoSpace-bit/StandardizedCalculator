                                    <Run Typography.Variants="Subscript" >x1</Run>
                                </Label>

                                <Label Content="+"  Width="26" FontWeight="Normal" Foreground="{DynamicResource PrimaryTextColor}" Margin="-5,0,0,0" FontStyle="Normal"  />

